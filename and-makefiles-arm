# limitations under the License.
LOCAL_PATH := $(call my-dir)
include $(CLEAR_VARS)
	LOCAL_PREBUILT_LIBS := \
		libiberty.a
LOCAL_MODULE_TAGS := optional
include $(BUILD_HOST_PREBUILT)' > $PREFIX_PATH/lib/Android.mk;

