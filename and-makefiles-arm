include $(CLEAR_VARS)
	LOCAL_PREBUILT_LIBS := \
		libbfd.a
LOCAL_MODULE_TAGS := optional
include $(BUILD_HOST_PREBUILT)' > $PREFIX_PATH/x86_64-linux-gnu/arm-linux-androideabi/lib/Android.mk;

